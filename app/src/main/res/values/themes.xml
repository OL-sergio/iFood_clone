<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IFood" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c_white_100</item>
        <item name="colorPrimaryVariant">@color/c_red_wine_100</item>
        <item name="colorOnPrimary">@color/c_red_devil_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/c_white_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="colorButton" parent="Widget.AppCompat.Button">
        <item name="colorControlHighlight">@color/c_rose_madder_100</item>
        <item name="android:backgroundTint">@color/c_red_devil_100</item>
        <item name="android:textColor">@color/c_white_100</item>
    </style>

</resources>