<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/c_red_devil_100"
    android:orientation="vertical"
    android:padding="@dimen/d_20sdp"
    >

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_20sdp"
        android:layout_gravity="center"
        android:indeterminate="true"/>

    <TextView
        android:id="@+id/progressDialogTextView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_14sdp"
        android:text="Loading..."
        android:textColor="@color/c_white_100"
        android:textSize="@dimen/d_20sdp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />
</LinearLayout>