<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape>
            <corners android:radius="@dimen/d_32sdp" />
            <solid android:color="@color/c_red_wine_100" />
            <stroke android:color="@color/c_white_100"/>
            <size android:height="@dimen/d_10sdp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape >
            <corners android:radius="@dimen/d_32sdp" />
            <solid android:color="@color/c_white_100" />
            <stroke android:color="@color/c_red_devil_100" android:width="1dp"/>
            <size android:height="@dimen/d_10sdp" />
        </shape>
    </item>
</selector>